<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Distance Calculation</title>
    </head>

    <body>
        <br>
        <h1 style="font-weight: bold; margin: 30px 30px 20px; text-align: center;">Distance Calculator</h1>
        <br>

        <% if(isCalculated) { %>
            <hr>
            <h2 style="color: blue; margin: 20px 50; text-align: center;">The distance between these two points (<%= coordinate.x1 %>, <%= coordinate.y1 %>) and (<%= coordinate.x2 %>, <%= coordinate.y2 %>) is: <span style="color: red;"><%= disPoints %></span></h2>
            <hr>
        <% } %>

        <form action="/" method="post">
            <div style="display: flex; flex-direction: column; margin: 60px 400px 10px;">
                <input type="number" name="x1" placeholder="X1">
                <br>
                <input type="number" name="y1" placeholder="Y1">
                <br>
                <input type="number" name="x2" placeholder="X2">
                <br>
                <input type="number" name="y2" placeholder="Y2">
            </div>
            <br>
            <button style="width: 200px; padding: 10px; border-radius: 10px; display: block; margin: 0px auto;">Calculate Distance</button>
        </form>
    </body>
</html>
